<Page
    x:Class="CortanaCommand.FavoritePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CortanaCommand"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="0" FromHorizontalOffset="-80" />
        </TransitionCollection>
    </Page.Transitions>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Text="お気に入り" VerticalAlignment="Center" FontSize="24" Padding="10,0,0,0" />
        </Grid>
        <Pivot Grid.Row="1">
            <PivotItem Header="お気に入り1">
                <Grid/>
            </PivotItem>
            <PivotItem Header="お気に入り2">
                <Grid/>
            </PivotItem>
        </Pivot>

    </Grid>
</Page>
